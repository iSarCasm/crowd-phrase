<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-push-3">
      <br>
      <%= button_to 'Get New Phrase', rand_phrase_path, method: :post, remote: true, class: 'btn btn-primary col-sm-12', style: 'margin-bottom: 10px;' %>
      <%= button_to 'Clear All Phrases', clear_phrases_path, method: :post, remote: true, class: 'btn btn-danger col-sm-12', style: 'margin-bottom: 10px;' %>
      <h2>
        There are <span style='color: red;'><%= 6 %> </span>phrases left in the database.
      </h2>
      <br>
      <ol id='phrases'>
        <%= render partial: 'pages/phrase', collection: @phrases %>
      </div>
    </div>
  </div>
</div>
